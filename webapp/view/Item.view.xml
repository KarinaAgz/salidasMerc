<mvc:View
    controllerName="logaligroup.mapeobapi.controller.Item"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Shell>
        <Page id="page">
            <HBox
                width="100%"
                backgroundDesign="Solid"
                alignItems="Center"
                class="titleContainer customDynamicHeader"
            >
                <Image
                    src="./img/image.png"
                    width="250px"
                    height="100px"
                    class="customLogo"
                />
                <Title
                    textAlign="Center"
                    text="{i18n>itemTitle}"
                    level="H1"
                    class="sapUiSmallMarginTop"
                />
            </HBox>

            <content>
                <!-- Formulario para entrada de ítems -->
                <f:SimpleForm
                    id="SimpleFormItem"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="true"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            text="{i18n>material}"
                            design="Bold"
                            required="true"
                        />
                        <HBox>
                            <Input
                                id="material"
                                placeholder="{i18nCode>ingresaMaterial}"
                                value="{mainModel>/currentItem/material}"
                                width="100%"
                                showValueHelp="true"
                                valueHelpRequest="onMaterialValueHelp"
                            />
                            <Button
                                icon="sap-icon://bar-code"
                                press="onScanMaterial"
                                class="sapUiSmallMarginBegin"
                            />
                        </HBox>

                        <Label
                            text="{i18n>planta}"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="planta"
                            placeholder="{i18nCode>ingresaPlanta}"
                            value="{mainModel>/currentItem/plant}"
                            maxLength="4"
                            showValueHelp="true"
                            valueHelpRequest="onPlantValueHelp"
                        />

                        <Label
                            text="{i18n>almacen}"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="almacen"
                            placeholder="{i18nCode>ingresaAlmacen}"
                            value="{mainModel}/currentItem/stge_loc"
                            maxLength="4"
                            showValueHelp="true"
                            valueHelpRequest="onStorageLocationValueHelp"
                        />

                        <Label
                            text="{i18n>lote}"
                            design="Bold"
                        />
                        <Input
                            id="lote"
                            placeholder="{i18n>ingresaLote}"
                            value="{mainModel>/currentItem/batch}"
                            maxLength="10"
                        />

                        <Label
                            text="{i18n>cantidad}"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="cantidad"
                            placeholder="{i18n>ingresaCantidad}"
                            value="{mainModel>/currentItem/entry_qnt}"
                            type="Number"
                        />

                        <Label
                            text="{i18n>unidadMedida}"
                            design="Bold"
                            required="true"
                        />
                        <Input
                            id="unidadMedida"
                            placeholder="{i18n>ingresaUnidadMedida}"
                            value="{mainModel>/currentItem/entry_uom}"
                            change="onEntryUomChange"
                            maxLength="3"
                            showValueHelp="true"
                            valueHelpRequest="onEntryUomValueHelp"
                        />

                        <Label
                            text="{i18n>centroCosto}"
                            design="Bold"
                            visible="{= ${mainModel>/header/move_type} === '201' || ${mainModel>/header/move_type} === '551'}"
                            required="{= ${mainModel>/header/move_type} === '201' || ${mainModel>/header/move_type} === '551'}"
                        />
                        <Input
                            id="centroCosto"
                            placeholder="{i18n>ingresaCentroCosto}"
                            value="{mainModel>/currentItem/costcenter}"
                            visible="{= ${mainModel>/header/move_type} === '201' || ${mainModel>/header/move_type} === '551'}"
                            maxLength="10"
                            showValueHelp="true"
                            valueHelpRequest="onCostCenterValueHelp"
                        />

                        <Label
                            text="{i18n>orden}"
                            design="Bold"
                            visible="{= ${mainModel>/header/move_type} === '261'}"
                            required="{= ${mainModel>/header/move_type} === '261'}"
                        />
                        <Input
                            id="orden"
                            placeholder="{i18n>ingresaOrden}"
                            value="{mainModel>/currentItem/orderid}"
                            visible="{= ${mainModel>/header/move_type} === '261'}"
                            maxLength="12"
                            showValueHelp="true"
                            valueHelpRequest="onOrderIdValueHelp"
                        />

                        <Label
                            text="{i18n>motivo}"
                            design="Bold"
                            visible="{= ${mainModel>/header/move_type} === '551'}"
                            required="{= ${mainModel>/header/move_type} === '551'}"
                        />
                        <Select
                            id="motivo"
                            visible="{= ${mainModel>/header/move_type} === '551'}"
                            selectedKey="{mainModel>/currentItem/move_reas}"
                            items="{mainModel>/motivos}"
                            width="100%"
                            showSecondaryValues="true"
                            change="onMoveReasChange"
                        >
                            <core:Item
                                key="{mainModel>key}"
                                text="{mainModel>text}"
                            />
                        </Select>
                    </f:content>
                </f:SimpleForm>

                <!-- Tabla para mostrar ítems guardados -->
                <Table
                    id="itemsTable"
                    items="{mainModel>/items}"
                    class="sapUiTopMargin"
                    noDataText="{i18n>noItems}"
                >
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>itemsGuardados}" level="H2" />
                            <ToolbarSpacer />
                            <Button
                                icon="delete"
                                tooltip="{i18n>eliminarSeleccionado}"
                                press="onDeleteItem"
                                enabled="{= ${itemsTable>/selectedItems} > 0}"
                            />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>material}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>planta}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>almacen}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>cantidad}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>unidadMedida}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{mainModel>material}" />
                                <Text text="{mainModel>plant}" />
                                <Text text="{mainModel>stge_loc}" />
                                <Text text="{mainModel>entry_qnt}" />
                                <Text text="{mainModel>entry_uom}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>

            <footer>
                <Toolbar class="customFooter">
                    <ToolbarSpacer />
                    <Button
                        text="{i18n>guardar}"
                        type="Emphasized"
                        press="onSaveItem"
                    />
                    <Button
                        text="{i18n>nuevoItem}"
                        type="Default"
                        press="onNewEntry"
                    />
                    <Button
                        text="{i18n>enviar}"
                        type="Success"
                        press="onSubmit"
                        enabled="{= ${mainModel>/items}.length > 0}"
                    />
                    <Button
                        text="{i18n>cancelar}"
                        type="Reject"
                        press="onCancel"
                    />
                </Toolbar>
            </footer>
        </Page>
    </Shell>
</mvc:View>