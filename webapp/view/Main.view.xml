<mvc:View
    controllerName="logaligroup.mapeobapi.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
>
    <f:DynamicPage
        id="dynamicPageId"
        showFooter="true"
        class="customDynamicPage"
    >
        <f:title>
            <f:DynamicPageTitle class="customDynamicPageTitle">
                <f:heading>
                    <HBox
                        justifyContent="Center"
                        width="100%"
                        backgroundDesign="Solid"
                        alignItems="Center"
                        class="titleContainer"
                    >
                        <Title
                            text="{i18n>title}"
                            class="customCenteredTitle"
                        />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader class="customDynamicHeader">
                <f:content>
                    <HBox
                        alignItems="Center"
                        class="customHeaderHBox"
                    >
                        <Image
                            src="./img/image.png"
                            width="150px"
                            height="100px"
                            class="customLogo"
                        />
                    </HBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <layout:Grid
                defaultSpan="XL3 L4 M6 S12"
                class="sapUiMediumMargin customGrid"
            >
                <!-- Columna 1: Salida Mercancía y Fragmentos -->
                <VBox>
                    <Label
                        text="{i18n>salidaMercancia}"
                        design="Bold"
                        class="sapUiSmallMarginTop sapUiSmallMarginBottom customLabel"
                    />
                    <Select
                        id="opcionesSelect"
                        selectedKey="{mainModel>/header/reference_type}"
                        change="onSelectionChange"
                        width="100%"
                        forceSelection="false"
                        class="customSelect"
                    >
                        <items>
                            <core:Item
                                key=""
                                text="{i18n>Eligeopcion}"
                            />
                            <core:Item
                                key="reserva"
                                text="{i18n>Reserva}"
                            />
                            <core:Item
                                key="orden"
                                text="{i18n>Orden}"
                            />
                            <core:Item
                                key="otros"
                                text="{i18n>Otros}"
                            />
                        </items>
                    </Select>

                    <core:Fragment
                        id="claseMovimientoFragment"
                        fragmentName="logaligroup.mapeobapi.fragments.ClaseMovimiento"
                        type="XML"
                    />
                    
                    <!-- Número de Reserva (con binding) -->
                    <VBox id="numeroReservaFragment" visible="{= ${mainModel>/header/reference_type} === 'reserva'}">
                        <Label
                            text="Número de Reserva"
                            design="Bold"
                            class="customLabel"
                        />
                        <Input
                            value="{mainModel>/header/reserv_no}"
                            width="100%"
                            placeholder="Ingresa número de reserva"
                            class="customInput"
                            change="onReservNoChange"
                        />
                    </VBox>

                    <!-- Posición de Reserva (con binding) -->
                    <VBox id="posicionReservaFragment" visible="{= ${mainModel>/header/reference_type} === 'reserva'}">
                        <Label
                            text="Posición de Reserva"
                            design="Bold"
                            class="customLabel"
                        />
                        <Input
                            value="{mainModel>/header/res_item}"
                            width="100%"
                            placeholder="Ingresa posición"
                            class="customInput"
                        />
                    </VBox>

                   
                    <VBox id="numeroOrdenFragment" visible="{= ${mainModel>/header/reference_type} === 'orden'}">
                        <Label
                            text="Número de Orden"
                            design="Bold"
                            class="customLabel"
                        />
                        <Input
                            value="{mainModel>/header/orderid}"
                            width="100%"
                            placeholder="Ingresa número de orden"
                            class="customInput"
                            change="onOrderIdChange"
                        />
                    </VBox>
                </VBox>

                
                <VBox >
                    <Label
                        text="Fecha Documento"
                        design="Bold"
                        class="sapUiSmallMarginTop sapUiSmallMarginBottom customLabel"
                    />
                    <DatePicker
                        id="fechaDoc"
                        value="{mainModel>/header/doc_date}"
                        valueFormat="yyyy-MM-dd"
                        displayFormat="dd.MM.yyyy"
                        width="75%"
                        placeholder="Selecciona Fecha"
                        class="customDatePicker"
                    />
                </VBox>

                
                <VBox >
                    <Label
                        text="Fecha de Contabilización"
                        design="Bold"
                        class="sapUiSmallMarginTop sapUiSmallMarginBottom customLabel"
                    />
                    <DatePicker
                        id="fechaContabilizacion"
                        value="{mainModel>/header/pstng_date}"
                        valueFormat="yyyy-MM-dd"
                        displayFormat="dd.MM.yyyy"
                        width="75%"
                        placeholder="Selecciona Fecha"
                        class="customDatePicker"
                    />
                </VBox>

              
                <VBox >
                    <Label
                        text="Referencia"
                        design="Bold"
                        class="sapUiSmallMarginTop sapUiSmallMarginBottom customLabel"
                    />
                    <Input
                        id="referenciaReserva"
                        value="{mainModel>/header/ref_doc_no}"
                        width="75%"
                        placeholder="Ingresa referencia"
                        class="customInput"
                    />
                </VBox>

                <!-- Columna 5: Texto Cabecera -->
                <VBox>
                    <Label
                        text="Texto Cabecera"
                        design="Bold"
                        class="sapUiSmallMarginTop sapUiSmallMarginBottom customLabel"
                    />
                    <TextArea
                        id="textoCabecera"
                        value="{mainModel>/header/header_txt}"
                        width="75%"
                        rows="3"
                        placeholder="Ingresa el texto cabecera"
                        class="customTextArea"
                    />
                </VBox>
            </layout:Grid>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>Siguiente}"
                    type="Emphasized"
                    press="onNext"
                    class="customButton"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>