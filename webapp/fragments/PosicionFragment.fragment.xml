<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form"
>
    <VBox
        id="_IDGenVBox2"
        width="100%"
        fitContainer="true"
    >
        <layout:SimpleForm
            id="_IDGenSimpleForm1"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="4"
            adjustLabelSpan="false"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="2"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="true"
            class="sapUiForm sapUiSizeCompact"
        >
            <layout:content>
                <Label
                    id="materialLabel"
                    text="{i18n>material}"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="material"
                    value="{mainModel>/currentItem/material}"
                    valueState="{mainModel>/currentItem/materialState}"
                    valueStateText="{mainModel>/currentItem/materialStateText}"
                    submit=".onMaterialScanned"
                    liveChange=".onLiveChangeMaterial"
                    placeholder="{i18n>ingreseMaterial}"
                />
                <Label
                    id="materialDescLabel"
                    text="{i18n>descripcion_material}"
                    design="Bold"
                />
                <Input
                    id="materialDesc"
                    value="{mainModel>/currentItem/txt_material}"
                    enabled="false"
                    placeholder="{i18n>descripcionMaterial}"
                />
                <Label
                    id="cantidadLabel"
                    text="{i18n>cantidad}"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="cantidad"
                    value="{mainModel>/currentItem/cantidad}"
                    valueState="{mainModel>/currentItem/quantityState}"
                    valueStateText="{mainModel>/currentItem/quantityStateText}"
                    change=".onQuantityChange"
                    placeholder="{i18n>ingreseCantidad}"
                    type="Number"
                />
                <Label
                    id="umLabel"
                    text="{i18n>um}"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="um"
                    value="{mainModel>/currentItem/um}"
                    placeholder="{i18n>ingreseUM}"
                    enabled="false"
                />
                <Label
                    id="batchLabel"
                    text="{i18n>lote}"
                    design="Bold"
                    required="{mainModel>/currentItem/isBatchRequired}"
                />
                <Input
                    id="batch"
                    value="{mainModel>/currentItem/batch}"
                    enabled="{mainModel>/currentItem/isBatchRequired}"
                    submit=".onBuscarDetalle"
                    liveChange=".onLiveChangeLote"
                    placeholder="{i18n>ingreseLote}"
                />
                <Label
                    id="centroLabel"
                    text="{i18n>centro}"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="centro"
                    value="{mainModel>/currentItem/centro}"
                    placeholder="{i18n>ingreseCentro}"
                    enabled="false"
                />
                <Label
                    id="almacenLabel"
                    text="{i18n>almacen}"
                    design="Bold"
                    required="true"
                />
                <Input
                    id="almacen"
                    value="{mainModel>/currentItem/almacen}"
                    placeholder="{i18n>ingreseAlmacen}"
                    enabled="false"
                />
                <Label
                    id="costcenterLabel"
                    text="{i18n>ceco}"
                    design="Bold"
                    required="{oDisplayModel>/Posiciones/ceco}"
                    visible="{oDisplayModel>/Posiciones/ceco}"
                />
                <Input
                    id="costcenter"
                    value="{mainModel>/currentItem/costcenter}"
                    editable="{oDisplayModel>/Posiciones/ceco}"
                    visible="{oDisplayModel>/Posiciones/ceco}"
                    placeholder="{i18n>ingreseCeco}"
                />
                <Label
                    id="motivoLabel"
                    text="{i18n>motivo}"
                    design="Bold"
                    required="{oDisplayModel>/Posiciones/motivo}"
                    visible="{oDisplayModel>/Posiciones/motivo}"
                />
                <Input
                    id="motivo"
                    value="{mainModel>/currentItem/motivo}"
                    editable="{oDisplayModel>/Posiciones/motivo}"
                    visible="{oDisplayModel>/Posiciones/motivo}"
                    placeholder="{i18n>seleccionarMotivo}"
                    showValueHelp="true"
                    valueHelpRequest=".onMoveReasValueHelp"
                />
                <Label
                    id="txtPosicionLabel"
                    text="{i18n>txt_posicion}"
                    design="Bold"
                />
                <TextArea
                    id="txtPosicion"
                    value="{mainModel>/currentItem/txt_posicion}"
                    rows="2"
                    growing="true"
                    maxLength="40"
                    placeholder="{i18n>ingreseTextoPosicion}"
                />
                <Label
                    id="txtPosicionHistoricoLabel"
                    text="{i18n>historial_texto_posicion}"
                    design="Bold"
                />
                <TextArea
                    id="txtPosicionHistorico"
                    value="{mainModel>/currentItem/txt_posicion_historico}"
                    editable="false"
                    rows="3"
                />
            </layout:content>
            <Label ></Label>
            <FlexBox
                id="_IDGenFlexBox1"
                justifyContent="Center"
                alignItems="Center"
                width="100%"
                wrap="Wrap"
            >
                <Button
                    id="fetchDetails"
                    text="{i18n>fetchDetails}"
                    type="Emphasized"
                    press=".onFetchDetails"
                />
                <Button
                    id="saveItem"
                    text="{i18n>contabilizar}"
                    type="Success"
                    icon=""
                    press=".onSaveItem"
                    
                />
                <Button
                    id="cancelItem"
                    text="{i18n>cancelar}"
                    type="Reject"
                    press=".onCancelItem"
                    icon="sap-icon://decline"
                    
                />
            </FlexBox>
        </layout:SimpleForm>
    </VBox>
</core:FragmentDefinition>