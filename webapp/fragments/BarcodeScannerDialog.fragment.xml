<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="barcodeScannerDialog"
        title="Escanear Material"
        contentWidth="400px"
    >
        <VBox>
            <Input
                id="barcodeInput"
                placeholder="Escanea o ingresa el cÃ³digo de material"
                submit=".onBarcodeScanned"
                type="Text"
            />
        </VBox>
        <beginButton>
            <Button
                text="Escanear"
                type="Emphasized"
                press=".onScanBarcode"
                icon="sap-icon://bar-code"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cerrar"
                type="Reject"
                press=".onCloseBarcodeDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>