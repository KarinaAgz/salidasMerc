<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Label
        text="{i18n>claseMovimiento}"
        design="Bold"
        class="customLabel"
        required="true"
    />
    <Select
        id="moveTypeSelect"
        selectedKey="{mainModel>/header/move_type}"
        width="100%"
        class="customSelect"
        change="onMoveTypeChange"
    >
        <items>
            <core:Item key="" text="{i18n>seleccionar}" />
            <core:Item key="201" text="{i18n>moveType201}" />
            <core:Item key="261" text="{i18n>moveType261}" />
            <core:Item key="551" text="{i18n>moveType551}" />
        </items>
    </Select>
</core:FragmentDefinition>