<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="moveReasValueHelp"
        title="{i18n>seleccionarMotivo}"
        contentWidth="{= ${device>/system/phone} ? '100%' : '90%'}"
        stretch="{device>/system/phone}"
        confirm=".onMoveReasConfirm"
        search=".onMoveReasSearch"
        items="{mainModel>/config/moveReasons}"
        noDataText="{i18n>MotivosNoEncontrados}"
        icon="sap-icon://filter"
    >
        <items>
            <StandardListItem id="_IDGenStandardListItem"
                title="{mainModel>text}"
                description="{mainModel>key}"
                key="{mainModel>key}"
                type="Active"
                tooltip="{i18n>seleccionarMotivoTooltip}"
            />
        </items>
    </SelectDialog>
</core:FragmentDefinition>
