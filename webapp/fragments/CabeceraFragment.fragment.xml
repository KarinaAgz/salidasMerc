<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:layout="sap.ui.layout.form"
>
    <m:VBox id="_IDGenVBox" width="100%" fitContainer="true">
        <layout:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsL="1"
            columnsM="1"
            backgroundDesign="Translucent"
        >
            <m:Label text="Salida de Mercancía" design="Bold"/>
            <m:Select
                id="referenceType"
                change=".onReferenceTypeChange"
                items="{odataModel>/Z_C_CLASEMOV}"
            >
                <core:Item key="{odataModel>ClaseMovimiento}" text="{odataModel>Descripcion}"/>
            </m:Select>
            <m:Label text="Clase de Movimiento" design="Bold"/>
            <m:Input
                id="moveTypeManual"
                value="{mainModel>/header/move_type}"
                editable="false"
                type="Text"
            />
            <m:Label text="Fecha Documento" design="Bold"/>
            <m:DatePicker
                id="docDate"
                value="{mainModel>/header/doc_date}"
                valueFormat="yyyy-MM-dd"
                displayFormat="yyyy-MM-dd"
            />
            <m:Label text="Fecha Contabilización" design="Bold"/>
            <m:DatePicker
                id="pstngDate"
                value="{mainModel>/header/pstng_date}"
                valueFormat="yyyy-MM-dd"
                displayFormat="yyyy-MM-dd"
            />
            <m:Label text="Referencia" design="Bold"/>
            <m:Input
                id="refDocNo"
                value="{mainModel>/header/ref_doc_no}"
                placeholder="Ej. 500"
                type="Text"
                maxLength="16"
            />
            <m:Label text="Texto Cabecera" design="Bold"/>
            <m:TextArea
                id="headerTxt"
                value="{mainModel>/header/header_txt}"
                rows="3"
                growing="true"
                maxLength="25"
            />
        </layout:SimpleForm>
        <m:HBox justifyContent="End" width="100%" class="sapUiSmallMarginTop">
            <m:Button text="Continuar" type="Emphasized" press=".onContinueHeader" icon="sap-icon://navigation-right-arrow"/>
            
            <m:Button text="Cancelar" type="Reject" press=".onCancelHeader" icon="sap-icon://decline"/>
        </m:HBox>
    </m:VBox>
</core:FragmentDefinition>