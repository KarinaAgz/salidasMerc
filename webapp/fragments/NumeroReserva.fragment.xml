<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Label
        text="{i18n>numeroReserva}"
        design="Bold"
        class="customLabel"
        required="true"
    />
    <Input
        value="{mainModel>/header/reserv_no}"
        width="100%"
        placeholder="{i18n>ingresaNumeroReserva}"
        class="customInput"
        change="onReservNoChange"
        showValueHelp="true"
        valueHelpRequest="onReservNoValueHelp"
    />
</core:FragmentDefinition>